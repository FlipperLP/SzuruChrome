{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "module": "es2020",
    "moduleResolution": "node",
    "target": "es2019",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "lib": ["es2019", "dom"]
  },
  "include": ["./src/**/*"]
}
